<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.register.FirstRegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/include8"
                layout="@layout/item_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

        </include>

        <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="학교이메일"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include8" />

        <EditText
                android:id="@+id/email_input_box"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/class_info_shape"
                android:ems="10"
                android:hint="abc@abc.ac.kr"
                android:paddingStart="12dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/send_email_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView51" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                android:text="인증받기"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#c4c4c4"
                android:background="@drawable/inactive_btn_shape"
                app:layout_constraintBottom_toBottomOf="@+id/email_input_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/email_input_box"
                app:layout_constraintTop_toTopOf="@+id/email_input_box" />

        <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="이메일 인증번호 확인"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_input_box" />

        <EditText
                android:id="@+id/number_input_box"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/class_info_shape"
                android:ems="10"
                android:hint="abc@abc.ac.kr"
                android:paddingStart="12dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/confirm_email_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView52" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                android:text="확인"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#c4c4c4"
                android:background="@drawable/inactive_btn_shape"
                app:layout_constraintBottom_toBottomOf="@+id/number_input_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/number_input_box"
                app:layout_constraintTop_toTopOf="@+id/number_input_box" />

        <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="비밀번호"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/confirm_text" />

        <EditText
                android:id="@+id/password_input_box"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:inputType="numberPassword"
                android:hint="안전한 비밀번호를 입력해주세요."
                android:background="@drawable/class_info_shape"
                android:ems="10"
                android:paddingStart="12dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView53" />

        <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="@string/register_agree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_input_box" />

        <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="이용약관"
                android:textColor="@color/app_main_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView54" />

        <View
                android:id="@+id/view8"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:background="#c4c4c4"
                android:layout_marginVertical="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView55"
                app:layout_constraintStart_toEndOf="@+id/textView55"
                app:layout_constraintTop_toTopOf="@+id/textView55" />

        <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="개인정보 정책"
                android:textColor="@color/app_main_blue"
                app:layout_constraintBottom_toBottomOf="@+id/textView55"
                app:layout_constraintStart_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="@+id/textView55" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_step_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="다음"
                android:background="@drawable/yellow_btn_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />

        <TextView
                android:text="인증번호가 확인되었습니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_text"
                android:textColor="@color/app_main_blue"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_light"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/number_input_box"
                app:layout_constraintStart_toStartOf="@+id/number_input_box" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>