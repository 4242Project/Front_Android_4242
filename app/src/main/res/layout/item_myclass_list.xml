<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:id="@+id/imageView11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/cookie3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="11/24"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:textColor="#939393"
                app:layout_constraintBottom_toBottomOf="@+id/ddate"
                app:layout_constraintStart_toEndOf="@+id/ddate"
                app:layout_constraintTop_toTopOf="@+id/ddate" />

        <TextView
                android:id="@+id/dep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="식품생명공공공"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:textColor="#aeaeae"
                app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                app:layout_constraintStart_toStartOf="@+id/subject"
                app:layout_constraintTop_toBottomOf="@+id/subject" />

        <TextView
                android:id="@+id/ddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="D-7"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/date_shape_drawable"
                app:layout_constraintBottom_toTopOf="@+id/subject"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

        <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="식품영양학과와 함께 쿠키를 만들어봐요!"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="12sp"
                android:textColor="#3f3f3f"
                app:layout_constraintBottom_toTopOf="@+id/dep"
                app:layout_constraintTop_toBottomOf="@+id/ddate"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageView11" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button12"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:layout_marginEnd="24dp"
                android:text="신청 취소"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#3f3f3f"
                android:textSize="12sp"
                android:background="@drawable/table_grey_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>